<p id="notice" class = "container text-center" style="padding-top:5px"><%= notice %></p>

<h1>Vehicles</h1>

<table>
  <thead>
    <tr>
      <th>License number</th>
      <th>Vehicle make</th>
      <th>Vehicle model</th>
      <th>Vehicle color</th>
      <th>Vehicle plate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.license_number %></td>
        <td><%= vehicle.vehicle_make %></td>
        <td><%= vehicle.vehicle_model %></td>
        <td><%= vehicle.vehicle_color %></td>
        <td><%= vehicle.vehicle_plate %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

