  </div>

  <div class="field">
    <%= form.label :start_zip %>
    <%= form.text_field :start_zip %>
  </div>

  <div class="field">
    <%= form.label :end_city %>
    <%= form.text_field :end_city %>
  </div>

  <div class="field">
    <%= form.label :end_street_address %>
    <%= form.text_field :end_street_address %>
  </div>

  <div class="field">
    <%= form.label :end_zip %>
    <%= form.text_field :end_zip %>
  </div>

  <div class="field">
    <%= form.label :trip_date %>
