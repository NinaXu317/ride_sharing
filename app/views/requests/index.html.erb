<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Start street address</th>
      <th>End street address</th>
      <th>End zip</th>
      <th>Trip time</th>
      <th>Distance</th>
      <th>Highest price to pay</th>
      <th>Matched availability</th>
      <th>Request status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.start_street_address %></td>
        <td><%= request.end_street_address %></td>
        <td><%= request.trip_time %></td>
        <td><%= request.trip_distance %></td>
        <td><%= request.highest_price_to_pay %></td>
        <td><%= request.matched_availability_id %></td>
        <td><%= request.request_status %></td>
        <td><%= link_to 'Show', user_request_path(current_user, request) %></td>
        <td><%= link_to 'Edit', edit_user_request_path(current_user, request) %></td>
        <td><%= link_to 'Destroy', user_request_path(current_user, request), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_user_request_path %>
