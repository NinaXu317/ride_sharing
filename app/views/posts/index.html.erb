<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>User</th>
      <th>Start</th>
      <th>Destination</th>
      <th>Trip date</th>
      <th>Trip time</th>
      <th>Distance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.post_id %></td>
        <td><%= post.user_id %></td>
        <td><%= post.start %></td>
        <td><%= post.destination %></td>
        <td><%= post.trip_date %></td>
        <td><%= post.trip_time %></td>
        <td><%= post.distance %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
