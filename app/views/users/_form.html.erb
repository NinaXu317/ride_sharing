<div class="row">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto">
    <h1 class="text-center">Account</h1>
      <%= form_with(model: user, local: true) do |form| %>
      <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-4">
            <% if @user.avatar.attached? %>
              <%= image_tag @user.avatar.variant(resize: "100x100!") %>
            <% else %>
              <%= image_tag @user.avatar_attachment_path, height: 100, width: 100, cllass: "rounded-circle" %>
            <% end %>
          </div>
          <div class="col-sm-8">
            <%= form.file_field :avatar, class: "d-flex justify-content-center align-items-center" %>
          </div>
        </div>
      </div> 

      <div class="form-group">
        <%= form.text_field :username, autofocus: false, class: 'form-control', placeholder: "User Name", :value => params[:username] || @user.username %>
      </div>

      <div class="form-group">
        <%= form.password_field :password, class: 'form-control', placeholder: "Password", :value => params[:password] || @user.password %>
      </div>
      <div class="form-group">
        <%= form.number_field :age, class: 'form-control', placeholder: "Age", :value => params[:age] || @user.age %>
      </div>

      <div class="form-group">
        <%= form.text_field :gender, class: 'form-control', placeholder: "Gender", :value => params[:gender] || @user.gender %>
      </div>

      <div class="form-group">
        <%= form.text_field :firstname, class: 'form-control', placeholder: "First Name", :value => params[:firstname] || @user.firstname %>
      </div>

      <div class="form-group">
        <%= form.text_field :lastname, class: 'form-control', placeholder: "Last Name", :value => params[:lastname] || @user.lastname %>
      </div>

      <div class="form-group">
        <%= form.text_field :phone_number, class: 'form-control', placeholder: "Phone Number", :value => params[:phone_number] || @user.phone_number %>
      </div>

      <div class="form-group">
        <%= form.text_field :major, class: 'form-control', placeholder: "Major", :value => params[:major] || @user.major %>
      </div>

      <div class="form-group">
        <%= form.text_field :year, class: 'form-control', placeholder: "Year", :value => params[:year] || @user.year %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
      <% end %>


  </div>
</div>