<div class="container emp-profile">
  <div>
    <div class="row">
      <div class="col-md-4">
        <div class="profile-img">
          <%= image_tag @user.avatar_attachment_path %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="profile-head">
          <h5><%= "#{@user.firstname} #{@user.lastname}" %></h5>
          <p class="proile-rating">RATINGS : <span><%= @user.ratings %></span></p>
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <%= render 'profilenav'%>
          </ul>
        </div>
      </div>
      <div class="col-md-2">
        <%= link_to 'Edit Profile', edit_user_path(@user), class: 'profile-edit-btn' %>
        <% if @user.is_driver%>
          <% @vehicle = Vehicle.find_by(user_id: @user.id)%>
          <% if !@vehicle.nil?%>
            <%= link_to 'Edit Vehicle', edit_vehicle_path(@vehicle.id), class: 'profile-edit-btn' %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
      </div>
      <div class="col-md-8">
        <div class="tab-content profile-tab" id="myTabContent">
          <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <%= render 'userinfo'%>
          </div>
          <% if session[:user_id] == @user.id %>
            <div class="tab-pane fade" id="timeline" role="tabpanel" aria-labelledby="timeline-tab">
              <%= render 'tripinfo'%>
            </div>
          <% end %>
          <div class="tab-pane fade" id="vehicle" role="tabpanel" aria-labelledby="vehicle-tab">
            <% if @user.is_driver%>
              <%= render 'vehicleinfo'%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>