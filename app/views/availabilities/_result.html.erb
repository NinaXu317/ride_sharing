<% @availabilities.each_slice(4).each do |a|%>
    <div class = "row", style = "margin-top: 2%;">
        <% a.each do |availability| %>
            <div class="col-md-3">
                <%= render 'card',  :availability => availability%>
            </div>
        <% end %>
    </div>
<% end %>
<div id="pagination" style="margin-left: 40%; margin-top: 40px">
  <%= paginate @availabilities, theme: 'my_custom_theme'%>
</div>