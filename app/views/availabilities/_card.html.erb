<div class="card" style="width: 25rem; height: 30rem;">
    <div class="card-body" style="width: 23rem; height: 26rem;">
        <h3 class="card-title">Available Ride</h5>
        <i class="fas fa-map-marker-alt"></i><strong> Start address: </strong><br>
        <%= availability.start_street_address %>, <%= availability.start_city %><br>
        <i class="fas fa-map-marker-alt"></i><strong> End street address: </strong><br>
        <%= availability.end_city %>, <%= availability.end_street_address %><br>
        <i class="far fa-clock"></i><strong> Trip Time: </strong><br>
        <%= availability.trip_time %><br>
        <i class="fas fa-dollar-sign"></i><strong> Price Requested: </strong><br>
        <%= availability.lowest_acceptable_price %><br>
        <br>
        <div class = "row", style="position: absolute; top: 25rem;">
            <div class = "col-md-5">
                <%= button_to "View Details", availability_path(availability.id), method: :get, class: "btn btn-info btn-lg"%>
            </div>
            <div class = "col-md-5">
                <%= button_to "Request Ride", request_rides_path(:id => availability.id), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: "btn btn-info btn-lg" } %>
            </div>
        </div>
    </div>
</div>
