<section class="login">
  <div class=home>
    <% if !logged_in? %>
    <div>
      <h1 class="welcom">Welcome to Ride Sharing</h1>
      <h3 class="welcom">A new way to change your trip</h3>
        <ul class="sign_up">
          <a class="btn btn-outline-success btn-lg sign_up_button" href="/signup" role="button">Sign Up</a>
          <a class="btn btn-outline-dark btn-lg sign_up_button " href="/login" role="button">Log In</a>
        </ul >

        
    </div>

  </div>

  <div class="logged_in">
    <% else %>
      <h1 class="display-4 welcom">Welcome to Ride Sharing</h1>
      <hr class="my-4">
      <div>
      <% if current_user.is_driver%>
        <ul class="margin-left:28%">
          <%= link_to "Search for a request", search_requests_path, class: "btn btn-lg btn-info sign_up_button"%>
          <%= link_to "Post an availability", new_availability_path, class: "btn btn-lg  btn-info sign_up_button"%>
        </ul>
      <% else %>
        <ul style="margin-left:28%">
          <%= link_to "Search for a ride", search_rides_path, class: "btn btn-lg btn-info sign_up_button"%>
          <%= link_to "Make a request", new_request_path, class: "btn btn-lg btn-info sign_up_button"%>
        </ul>
      <% end %>
    <% end %>
      </div>
  </div>
</section>
 
  <script>
    function onSignIn(googleUser){
      console.log("User is " + JSON.stringify(googleUser.getBasicProfile()))
    }

    function signOut(){
      gapi.auth2.getAuthInstance().signOut().then(function(){
        console.log("User signed out")
      })
    }
  </script>


  